<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
</head>
<style>
    #chat{
        max-height: 300px;
        min-height: 300px;
        background-color: aliceblue;
        overflow-y: scroll;
    }
</style>
<body>
    <h1 class="d-flex justify-content-center">Chat do Curso</h1>
    <div id="chat">

    </div><br>
    <input type="text" name="" id="msg" class="form-control" placeholder="Mensagem"><br>
    <input type="text" name="" id="username" placeholder="Seu nome de usuÃ¡rio" class="form-control"><br>
    <div class="d-grid gap-2">
        <button onclick="enviar()" class="btn btn-primary">Enviar</button>
    </div>

</body>

<script src="https://cdnjs.cloudflare.com/ajax/libs/socket.io/4.7.2/socket.io.js"></script>
<script>
    const socket = io("http://localhost:3000");
    socket.on("disconnect", () => {
        console.log("Desconectado");
    })

    socket.on("showmsg", (data) => {
        console.log(data);
        const chat = document.getElementById("chat");
        const p = document.createElement("p");
        p.innerHTML = data.username + ": " + data.msg;
        chat.append(p)
    })

    function enviar() {
        const msgField = document.getElementById("msg");
        const usernameField = document.getElementById("username");

        const msg = msgField.value;
        const username = usernameField.value;

        socket.emit("msg", { msg: msg, username: username });
    }


</script>

</html>